RewriteEngine On

# Block access to framework directories
RewriteRule ^(app|framework|storage|tests|vendor)/ - [F,L]

# Block sensitive files
RewriteRule ^(composer\.(json|lock)|\.env.*|\.git.*|README\.md)$ - [F,L]

# Redirect everything to public folder
RewriteCond %{REQUEST_URI} !^/public/
RewriteRule ^(.*)$ /public/$1 [L]